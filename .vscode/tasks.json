{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17", // Ensure C++17 standard is used
                "-I../include", // Include the headers from the '../include' directory
                "-v",
                "*.cpp", // Compile all .cpp files in the src directory
                "-o",
                "main" // Output executable is named 'main'
            ],
            "options": {
                "cwd": "${workspaceFolder}/src" // Set current working directory to 'src'
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task for compiling C++"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}